@{
    Layout = "~/Areas/Cpanel/Views/Shared/_Layout.cshtml";
}

<form method="post" class="mdl-grid mdl-shadow--2dp mdl-cell mdl-cell--12-col">
    <!-- Header -->
    <h5 class="mdl-typography--headline5 mdl-cell mdl-cell--12-col">ورود کاربران اختصاصی</h5>
    <h6 class="text-danger"> @(ViewData["ErrorValidation"]) </h6>
    <!-- Phone Number -->
    <div class="mdl-cell mdl-cell--6-col">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label w-100">
            <input type="tel" id="phoneNumber" name="PhoneNumber" class="mdl-textfield__input" maxlength="20" required />
            <label class="mdl-textfield__label" for="phoneNumber">شماره همراه</label>
        </div>
    </div>

    <!-- FullName -->

    <div class="mdl-cell mdl-cell--6-col">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label w-100">
            <input class="mdl-textfield__input" type="text" id="fullName" name="fullName" value="" />
            <label class="mdl-textfield__label" for="fullName">نام و نام خانوادگی</label>
        </div>
    </div>


    <!-- Submit Button -->
    <div class="mdl-cell mdl-cell--12-col">
        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-cell--12-col w-100">
            ثبت
        </button>
    </div>
</form>
