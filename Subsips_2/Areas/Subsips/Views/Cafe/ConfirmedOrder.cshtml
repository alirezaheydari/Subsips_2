@using Subsips_2.Areas.Subsips.Models.Cafe
@model ConfirmedOrderModelView
@{

    Layout = "~/Areas/Subsips/Views/Shared/_Layout.cshtml";
    ViewData["PageName"] = "";
}

@section Style {
    <link href="~/css/subsips/cafe/confirmed-order.css" rel="stylesheet" />
}

<div class="row justify-content-center order-confirmation">
    <div class="col-md-8 text-center">
        <h1 class="mb-4">برای ثبت لطفا سفارش را تایید کنید</h1>
        <div class="border rounded p-4 shadow-sm">
            <div class="order-confirmation-detail-section">
                <p>نام : <span>@Model.CustomerFullName</span></p>
                <p>شماره همراه : <span>@Model.CustomerPhoneNumber</span></p>
                <p>قهوه : <span>@Model.CoffeeName</span></p>
                <p>قیمت: <span>@Model.CoffeePrice</span></p>
                <p>ایستگاه تحویل: <span>@Model.StationName</span></p>
                <button class="w-100 confirmed-order mb-3" onclick="window.open('/subsips/UserCustomer/MakeOrder?orderId=@(Model.orderId)&cafeId=@(Model.cafeId)&coffeeId=@(Model.coffeeId)', '_blank').focus()"
                        style="padding: 10px 20px; font-size: 16px; color: white; border: none; border-radius: 5px; cursor: pointer;">
                    تایید سفارش
                </button>

            </div>
        </div>
    </div>
</div>
